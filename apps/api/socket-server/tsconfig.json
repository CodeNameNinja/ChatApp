{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@models/*": [
        "./src/models/*"
      ],
      "@routes/*": [
        "./src/routes/*"
      ],
      "@validations/*": [
        "./src/validations/*"
      ],
      "@controllers/*": [
        "./src/controllers/*"
      ],
      "@utility/*": [
        "./src/utility/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@handlers/*": [
        "./src/handlers/*"
      ]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
